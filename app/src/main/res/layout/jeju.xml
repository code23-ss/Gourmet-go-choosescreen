<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".JejuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  첫째줄  (위치 변경 기능)    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/location" />

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Jeju"
                    android:textSize="20dp" />
            </LinearLayout>

            <!-- 둘째줄(검색기능)    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    app:iconifiedByDefault="false"
                    app:queryHint="search" />
            </LinearLayout>

            <!--  셋째줄      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@drawable/button_design"
                    android:text="Book"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="108dp" />

                <Button
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/button_design"
                    android:text="Guide"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="108dp" />

            </LinearLayout>

            <!--  넷째줄      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="1.3dp"
                    android:background="@drawable/button_design"
                    android:text="Hot Deals"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="108dp" />

                <Button
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="1.3dp"
                    android:background="@drawable/button_design"
                    android:text="Rewards"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="108dp" />
            </LinearLayout>

            <!-- 5번째줄(인기 레스토랑 및 바)       -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Top Restaurant/Bar"
                    android:textSize="24sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_bagdad"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_bagdad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_bagdad"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Bagdad"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_doldampig"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_doldampig" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_doldampig"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Jungmun Stonewall Black Pork"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_gojipdol"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_gojipdol" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_gojipdol"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Gojipdol Rockfish, Jungmun"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_haenyue"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_haenyue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_haenyue"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Haenyeo's Kitchen"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_hyeopjaemyeon"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_hyeopjaemyeon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_hyeopjaemyeon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Hyeopjae Myeon Cha-long"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/top_taeha"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/top_taeha" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_taeha"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Taeha Sashimi Restaurant, Jeju Airport"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </LinearLayout>
            </HorizontalScrollView>


            <!--  6번째 줄(미슐렝)      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Micheline Restaurant"
                    android:textSize="24sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/michelin_curryhouse"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/michelin_curryhouse"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/michelin_curryhouse"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Curry House"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/michelin_dombedon"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/michelin_dombedon"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/michelin_dombedon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Dombedon"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/michelin_sillawon"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/michelin_sillawon"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/michelin_sillawon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Sillawon"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_design">

                        <ImageView
                            android:id="@+id/michelin_suhee"
                            android:layout_width="400dp"
                            android:layout_height="250dp"
                            android:background="@drawable/round"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/michelin_suhee"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/michelin_suhee"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Suhee Restaurant"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <!--  7번째 줄(지역구별 식당)      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Browse by Location"
                    android:textSize="24sp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/loc_aewol_hanlim" />

                            <TextView
                                android:id="@+id/loc_aewol_hanlim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Aewol/Hanlim"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </FrameLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/loc_jejuairport" />

                            <TextView
                                android:id="@+id/loc_jejuairport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Jeju Airport"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/loc_seogwipo" />

                            <TextView
                                android:id="@+id/loc_seogwipo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Seogwipo"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/loc_sungsan" />

                            <TextView
                                android:id="@+id/loc_sungsan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Sungsan"
                                android:textColor="#000000"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 8번째 줄(음식 타입)       -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Cuisine"
                    android:textSize="24sp" />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:background="@drawable/button_design"
                        android:text="Korean"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Chinese"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Italian"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Japanese"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Fushion"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="Asian"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="108dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_design"
                        android:text="View more" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
